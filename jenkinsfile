pipeline {
    agent any

    environment {
        DEPLOY_SERVER = "ubuntu@your-server-ip"
        APP_DIR = "/var/www/fullstack-app"
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/yourusername/fullstack-app.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                dir('frontend') {
                    sh 'npm install'
                }
                dir('backend') {
                    sh 'npm install'
                }
            }
        }

        stage('Build Frontend') {
            steps {
                dir('frontend') {
                    sh 'npm run build'
                }
            }
        }

        stage('Package App') {
            steps {
                sh '''
                    rm -f build.zip
                    zip -r build.zip frontend/build backend
                '''
            }
        }

        stage('Deploy to Server') {
            steps {
                sshagent(['your-ssh-credentials-id']) {
                    sh """
                        scp build.zip $DEPLOY_SERVER:/tmp/
                        ssh $DEPLOY_SERVER '
                            sudo mkdir -p $APP_DIR &&
                            sudo unzip -o /tmp/build.zip -d $APP_DIR &&
                            cd $APP_DIR/backend &&
                            npm install &&
                            pm2 restart all || pm2 start server.js
                        '
                    """
                }
            }
        }
    }

    post {
        success {
            echo "✅ Deployment successful!"
        }
        failure {
            echo "❌ Deployment failed!"
        }
    }
}
