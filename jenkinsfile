pipeline {
    agent any

    environment {
        REMOTE_USER = 'ubuntu'
        REMOTE_HOST = '13.218.27.236'
        DEPLOY_DIR = '/home/ubuntu/fullstack-app'
        PRIVATE_KEY = '/var/lib/jenkins/.ssh/id_rsa'
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/Murugan6892/fullstack-app-jenkins.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                dir('frontend') { sh 'npm install' }
                dir('backend')  { sh 'npm install' }
            }
        }

        stage('Build Frontend') {
            steps {
                dir('frontend') { sh 'npm run build' }
            }
        }

        stage('Package App') {
            steps {
                sh 'rm -f build.zip'
                sh 'zip -r build.zip frontend/build backend'
            }
        }

        stage('Deploy to Server') {
            steps {
                sh '''
                ssh -i /var/lib/jenkins/.ssh/id_rsa -o StrictHostKeyChecking=no ubuntu@13.218.27.236 << 'EOF'
                mkdir -p /home/ubuntu/fullstack-app
                EOF

                scp -i /var/lib/jenkins/.ssh/id_rsa -o StrictHostKeyChecking=no build.zip ubuntu@13.218.27.236:/home/ubuntu/fullstack-app/

                ssh -i /var/lib/jenkins/.ssh/id_rsa -o StrictHostKeyChecking=no ubuntu@13.218.27.236 << 'EOF'
                cd /home/ubuntu/fullstack-app
                unzip -o build.zip
                # Optional: restart your app
                # pm2 restart all
                EOF
                '''
            }
        }
    }

    post {
        success { echo '✅ Deployment successful!' }
        failure { echo '❌ Deployment failed!' }
    }
}
