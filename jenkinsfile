pipeline {
    agent any

    environment {
        REMOTE_USER = 'ubuntu'
        REMOTE_HOST = '13.218.27.236'
        DEPLOY_DIR = '/home/ubuntu/fullstack-app'
        PRIVATE_KEY = '/var/lib/jenkins/.ssh/id_rsa'
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/Murugan6892/fullstack-app-jenkins.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                dir('frontend') { sh 'npm install' }
                dir('backend')  { sh 'npm install' }
            }
        }

        stage('Build Frontend') {
            steps {
                dir('frontend') { sh 'npm run build' }
            }
        }

        stage('Package App') {
            steps {
                sh '''
                    rm -f ${WORKSPACE}/build.zip
                    zip -r ${WORKSPACE}/build.zip frontend/build backend
                '''
            }
        }

        stage('Deploy to Server') {
            steps {
                sh '''
                    echo "Checking if SSH key is accessible..."
                    ls -l ${PRIVATE_KEY}

                    echo "Creating remote directory..."
                    ssh -i ${PRIVATE_KEY} -o StrictHostKeyChecking=no ${REMOTE_USER}@${REMOTE_HOST} "mkdir -p ${DEPLOY_DIR}"

                    echo "Copying build.zip to remote server..."
                    scp -i ${PRIVATE_KEY} -o StrictHostKeyChecking=no ${WORKSPACE}/build.zip ${REMOTE_USER}@${REMOTE_HOST}:${DEPLOY_DIR}/

                    echo "Unzipping and deploying on remote server..."
                    ssh -i ${PRIVATE_KEY} -o StrictHostKeyChecking=no ${REMOTE_USER}@${REMOTE_HOST} "
                        cd ${DEPLOY_DIR} &&
                        unzip -o build.zip &&
                        echo '✅ Deployment complete on server'
                    "
                '''
            }
        }
    }

    post {
        success { echo '✅ Deployment successful!' }
        failure { echo '❌ Deployment failed!' }
    }
}
