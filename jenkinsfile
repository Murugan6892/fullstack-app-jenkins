pipeline {
    agent any

    environment {
        DEPLOY_SERVER = "ubuntu@13.218.27.236"
        APP_DIR = "/var/www/fullstack-app"
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/Murugan6892/fullstack-app-jenkins.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                dir('frontend') {
                    sh 'npm install'
                }
                dir('backend') {
                    sh 'npm install'
                }
            }
        }

        stage('Build Frontend') {
            steps {
                dir('frontend') {
                    sh 'npm run build'
                }
            }
        }

        stage('Package App') {
            steps {
                sh '''
                    rm -f build.zip
                    zip -r build.zip frontend/build backend
                '''
            }
        }

        stage('Deploy to Server') {
            steps {
                sshagent(['server-deploy-key']) {
                    sh """
                        scp build.zip $DEPLOY_SERVER:/tmp/
                        ssh $DEPLOY_SERVER '
                            # Create deployment directory
                            sudo mkdir -p $APP_DIR &&
                            sudo unzip -o /tmp/build.zip -d $APP_DIR &&

                            # Install backend dependencies
                            cd $APP_DIR/backend &&
                            npm install &&

                            # Restart or start backend
                            pm2 restart all || pm2 start server.js &&

                            # Setup frontend with Nginx
                            sudo rm -rf /var/www/html/* &&
                            sudo cp -r $APP_DIR/frontend/build/* /var/www/html/ &&
                            sudo systemctl restart nginx
                        '
                    """
                }
            }
        }
    }

    post {
        success {
            echo "✅ Deployment successful! Visit http://13.218.27.236"
        }
        failure {
            echo "❌ Deployment failed!"
        }
    }
}
